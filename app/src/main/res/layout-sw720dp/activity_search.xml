<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.blackpearl.foldscope.Activity.SearchActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTradewind">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorWhite"
            android:hint="Enter here"
            android:textSize="@dimen/dp15"
            android:singleLine="true"
            android:textColorHint="@color/colorWhite"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp50"/>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:foregroundGravity="center"
            android:layout_marginRight="@dimen/dp10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/search"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_user_story_search">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLochinvar"
        android:text="Sorry There is no any Post to view"
        android:layout_marginTop="@dimen/dp20"
        android:textSize="@dimen/dp20"
        android:id="@+id/tv_msg"
        android:visibility="gone"
        android:layout_gravity="center"/>

</LinearLayout>
