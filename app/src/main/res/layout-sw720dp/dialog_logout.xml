<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toastLayoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_all_round"
    android:backgroundTint="@color/colorTradewind"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp20" >
    <LinearLayout
        android:id="@+id/ll_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:layout_toLeftOf="@+id/dialog_title"
        android:src="@drawable/logout"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:text="Logout"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp10" />
    </LinearLayout>

    <View
        android:id="@+id/view_devider"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp3"
        android:layout_below="@+id/ll_dialog"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/colorWhite" />

    <TextView
        android:id="@+id/txtv_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_devider"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:paddingEnd="@dimen/dp10"
        android:textSize="@dimen/dp18"
        android:paddingStart="@dimen/dp20"
        android:textColorHint="@color/colorWhite"
        android:paddingRight="@dimen/dp10"
        android:paddingLeft="@dimen/dp20" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp20"
        android:paddingRight="@dimen/dp20"
        android:layout_below="@+id/txtv_message"
        android:paddingTop="@dimen/dp10"
        android:weightSum="2">
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp40"
        android:layout_centerHorizontal="true"
        android:background="@color/colorDarkTradewind"
        android:text="Confirm"
        android:gravity="center"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="@dimen/dp15"
        android:textColor="@color/colorWhite" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_centerHorizontal="true"
            android:background="@color/colorDarkTradewind"
            android:text="@string/cancel"
            android:layout_marginLeft="@dimen/dp10"
            android:textSize="@dimen/dp15"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/colorWhite" />
    </LinearLayout>



</RelativeLayout>