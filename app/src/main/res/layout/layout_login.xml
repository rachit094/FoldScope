<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTradewind"
    android:orientation="vertical"
    tools:context="com.example.blackpearl.foldscope.Activity.LoginActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/dp150"
        android:layout_height="@dimen/dp150"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp20"
        android:src="@drawable/logo" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="@dimen/dp250"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp20"
        android:hint="Username:"
        android:theme="@style/EditTextHint">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textSize="@dimen/dp15"
            android:textColor="@color/colorWhite" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="@dimen/dp250"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Password:"
        android:singleLine="true"
        android:theme="@style/EditTextHint">


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="@dimen/dp15"
            android:textColor="@color/colorWhite" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/b_login"
        android:layout_width="@dimen/dp200"
        android:layout_height="@dimen/dp35"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/background_all_round"
        android:backgroundTint="@color/colorDarkTradewind"
        android:text="Login"
        android:textSize="@dimen/dp15"
        android:textColor="@color/colorWhite" />


    <TextView
        android:id="@+id/tv_forgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp20"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp10"
        android:textSize="@dimen/dp12"
        android:layout_toRightOf="@+id/tv_register"
        android:text="Lost Your Password?"
        android:textColor="@color/colorWhite" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
