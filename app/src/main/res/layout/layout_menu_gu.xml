<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:layout_below="@+id/view2"
        android:layout_marginTop="@dimen/dp1"
        android:id="@+id/rlmain"
        android:background="@color/colorLochinvar">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/dp38"
                android:layout_height="@dimen/dp38"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp38"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/dp40"
                android:src="@drawable/userlogout" />

            <Button
                android:id="@+id/b_login_frg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img"
                android:background="@color/colorTransperent"
                android:gravity="left|center_vertical"
                android:text="Login"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp15" />

        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_below="@+id/rl1"
            android:background="@color/colorWhite" />

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dp40"
                android:layout_marginRight="@dimen/dp40"
                android:src="@drawable/register" />

            <Button
                android:id="@+id/b_register_frg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img1"
                android:background="@color/colorTransperent"
                android:gravity="center_vertical|left"
                android:text="Register"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp15" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/dp40"
            android:layout_marginRight="@dimen/dp40"
            android:src="@drawable/byfoldscope" />

        <Button
            android:id="@+id/b_buy_foldscope"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img2"
            android:background="@color/colorTransperent"
            android:gravity="center_vertical|left"
            android:text="Buy FoldScope"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dp15" />
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/rl1"
        android:background="@color/colorGrey" />
